<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.TypeStudyProfileFragment">

    <Button
        android:id="@+id/typeStudy_ok_BU"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ok" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/What_you_want_learn" />

        <TextView
            android:id="@+id/study_option_daf_hayomi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/daf_hayomi" />

        <TextView
            android:id="@+id/study_option_talmud_bavly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/talmod_bavli" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/my_RecyclerView_Options_Seder_RV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible" />

    </LinearLayout>
</LinearLayout>